    "scripts": {
        "build": "rollup -c",
        "test": "jest",
        "test:watch": "jest --watch",
        "fix": "yarn run style:fix",
        "clean": "yarn run clean:soft",
        "clean:soft": "rm -rf lib story node_modules",
        "clean:hard": "yarn run clean && rm -f yarn.lock",
        "style": "yarn run style:format && yarn run style:lint",
        "style:lint": "yarn eslint ./src --cache --config ./.eslintrc.json",
        "style:format": "yarn prettier ./src --check --config ./.prettierrc",
        "style:fix": "yarn prettier ./src --write --config ./.prettierrc",
        "storybook": "yarn run storybook:all",
        "storybook:all": "start-storybook -p 6006",
        "storybook:form": "start-storybook -c ./.storybook/deploy -p 6006",
        "build-storybook": "yarn run build-storybook:all",
        "build-storybook:form": "rm -rf story && build-storybook -c ./.storybook/deploy -o story",
        "build-storybook:all": "rm -rf story && build-storybook -c ./.storybook -o story",
        "predeploy": "yarn run build-storybook",
        "deploy": "gh-pages -d story"
    }
}
